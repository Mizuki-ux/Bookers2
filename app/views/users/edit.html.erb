
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container mt-2">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <label>Name</label>
        <div class="form-group">
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <label>Image</label>
        <div class="form-group">
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <label>Introduction</label>
         <div class="form-group">
          <%= f.text_area :introduction, class: 'form-control', id: 'user_introduction' %>  
        </div>
          <div class="form-group">
            <%= f.submit "Update User", class: 'btn btn-secondary'%>
          </div>
      <% end %>
   </div>
  </div>
</div>